{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    // disable automatic inclusion of parent types
    "types": [
      "node",
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "../*.d.ts"
  ]
}
